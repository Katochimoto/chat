{
    "presets": [
        ["@babel/preset-env", { "loose": true, "modules": false }],
        "@babel/preset-react",
        "@babel/preset-flow"
    ],
    "plugins": [
        "@babel/plugin-transform-runtime",
        ["@babel/plugin-proposal-class-properties", { "loose": true }],
        "@babel/plugin-proposal-do-expressions"
    ],
    "env": {
        "test": {
            "presets": [
                ["env", { "targets": { "node": "current" }}]
            ]
        }
    }
}
